#   }
# }

# =============================================================================
# RESOURCE TAGGING
# =============================================================================

# Default tags (these will be applied to all resources)
tags = {
  Project     = "DataSafe"
  Environment = "POC"
  Owner       = "Cloud Team"
  Purpose     = "Private Storage Testing"
  CostCenter  = "IT-001"
}

# Additional tags to merge with default tags
additional_tags = {
  # Department = "IT"
  # Compliance = "SOC2"
  # Backup     = "Required"
}
